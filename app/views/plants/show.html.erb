<%= render 'shared/topnav' %>

<div class="center-container">
  <h1><%= @plant.name %></h1>
  <%= image_tag(@plant.image.attached? ? @plant.image : 'plant_placeholder.webp', size: '150x150', class:'img') %>
  <table class='details'>
    <tr>
      <td><strong>Name:</strong></td>
      <td><%= @plant.name %></td>
    </tr>
    <tr>
      <td><strong>Species:</strong></td>
      <td><%= @plant.species %></td>
    </tr>
    <tr>
      <td><strong>Watering Time:</strong></td>
      <td><%= @plant.wateringTime.strftime('%H:%M') %></td>
    </tr>
    <tr>
      <td><strong>Location:</strong></td>
      <td><%= @plant.location %></td>
    </tr>
    <tr>
      <td><strong>Sun:</strong></td>
      <td><%= @plant.plant_info.sun %></td>
    </tr>
    <tr>
      <td><strong>Soil:</strong></td>
      <td><%= @plant.plant_info.soil %></td>
    </tr>
    <tr>
      <td><strong>Pests & Diseases:</strong></td>
      <td><%= @plant.plant_info.pests %></td>
    </tr>
    <tr>
      <td><strong>Care Level:</strong></td>
      <td><%= @plant.plant_info.careLevel %></td>
    </tr>
    <tr>
      <td><strong>Propagation:</strong></td>
      <td><%= @plant.plant_info.propogation %></td>
    </tr>
    <tr>
      <td><strong>Leaf:</strong></td>
      <td><%= @plant.plant_info.leaf %></td>
    </tr>
    <tr>
      <td><strong>Fruit:</strong></td>
      <td><%= @plant.plant_info.fruit %></td>
    </tr>
    <tr>
      <td><strong>Growth Rate:</strong></td>
      <td><%= @plant.plant_info.growthRate %></td>
    </tr>
    <tr>
      <td><strong>Place of Origin:</strong></td>
      <td><%= @plant.plant_info.origin %></td>
    </tr>
  </table>

  <br>

  <div class="button-group">
    <%= link_to 'Edit', edit_plant_path(@plant), class: 'edit-button' %>
    <%= button_to 'Delete', plant_path(@plant), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete-button' %>
  </div>

</div>
