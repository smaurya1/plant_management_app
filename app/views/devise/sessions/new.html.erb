<html>
<head>
<%= stylesheet_link_tag 'apple', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div class="center-container">
  <h2>Log in to Planta</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'input-lable' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'first-field', placeholder: ' ' %>
    </div>

    <div class="field password-container">
      <%= f.label :password, class: 'input-label' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'last-field', placeholder: ' ' %>
      <%= f.button type: 'submit', class: 'submit-button' do %>
        <%= image_tag('arrow.right.circle.svg', alt: 'Log in') %>
      <% end %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="remember">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</body>
</html>