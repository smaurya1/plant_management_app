<html>
<head>
<%= stylesheet_link_tag 'apple', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<body>
<div class="center-container">

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: 'input lable' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'first-field' %>
  </div>

  
  <div class="field">
  <%= f.label :first_name, class: 'input-label' %>
  <%= f.text_field :first_name, class: 'middle-field' %>
  </div>

  <div class="field">
  <%= f.label :last_name, class: 'input-label' %>
  <%= f.text_field :last_name, class: 'middle-field' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'input-label' %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'middle-field' %>
  </div>

  <div class="field password-container">
    <%= f.label :password_confirmation, class: 'input-label' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'last-field' %>
    <%= f.button type: 'submit', class: 'submit-button' do %>
      <%= image_tag('arrow.right.circle.svg', alt: 'Sign up') %>
    <% end %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</body>
</html>