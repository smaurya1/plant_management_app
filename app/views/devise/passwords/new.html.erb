<html>
<head>
<%= stylesheet_link_tag 'apple', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<body>
<div class="center-container">

<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:'form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: 'input lable' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'one-field' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</body>
</html>